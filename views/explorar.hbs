<html>
	<head>
		<title>Seguindo</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="/style/assets/css/main.css" />
		<link rel="stylesheet" href="/alertify/css/alertify.css">
		<link rel="stylesheet" href="/alertify/css/themes/default.css">
	</head>
	<body>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
                      <div class="row">
						<div class="row" style="float:right">
                            <h3><a href="/home">Home</a></h3> 
                            <h3><a href="/seguidores">Seguidores</a></h3> 
                            <h3><a href="/seguindo">Seguindo</a></h3> 
                        </div>
					  </div>


                    <div class="row"><h1>Pesquisar pessoas no UTFitter: <input type="text"></h1></div>
                    <br>
                    <form action="/seguir" method="POST" accept-charset="utf-8">
                     {{#each people}}
                        <div class="row">
					       <span  class="avatar" style="text-align:left; padding:2px;"><img src="{{avatar}}" alt="" /></span>
							 <span style="text-align:right;">{{nome}}</span><br>
							 <span style="text-align:right"><strong>{{email}}</strong></span>
                             <a  href="/seguir?{{email}}">Seguir</a>
						   </div><br>
						   <div style="border-top: solid 1px rgba(255, 255, 255, 0.25);"></div>
                     {{/each}}
                     </form>
					</header>

				<!-- Main -->
					{{!-- <section id="main">
                       
					</section> --}}

				<!-- Footer -->
					<footer id="footer">
						<p>&copy; UTFitter. O twitter da UTFPR: <a href="http://utfpr.edu.br">UTFPR</a></p>
					</footer>

			</div>

		<!-- Scripts -->
			<script src="/style/assets/js/jquery.min.js"></script>
			<script src="/style/assets/js/jquery.poptrox.min.js"></script>
			<script src="/style/assets/js/skel.min.js"></script>
			<script src="/style/assets/js/main.js"></script>
				<script src="/alertify/alertify.js"></script>
			<script src="/alertify/alertify.min.js"></script>
	<script type="text/javascript">
		 
		  $(document).ready(function () {
              
            $(function () {
				configureModal();

				 var serverMessage = "{{serverMessage}}";

				if(serverMessage){
					if(serverMessage === "Você já segue esta pessoa."){
						alertify.warning(serverMessage);
					}else{
						alertify.success(serverMessage);
					}
				}
            });

			
        });
		function configureModal(){
			alertify.confirm().setHeader("Atenção");
			alertify.alert().setHeader("Atenção");;
		}
		</script>
	</body>
</html>