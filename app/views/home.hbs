<html>
	<head>
		<title>Visualize by TEMPLATED</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="/style/assets/css/main.css" />
		<link rel="stylesheet" href="/alertify/css/alertify.css">
		<link rel="stylesheet" href="/alertify/css/themes/default.css">
	</head>
	<body>

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
						<div class="row">
							<div class="row" style="float:right">
								<h3><a href="/explorar">Explorar</a></h3> 
								<h3><a href="/seguidores">Seguidores</a></h3> 
								<h3><a href="/seguindo">Seguindo</a></h3> 
								<h3><a href="/logout">Logout</a></h3> 
							</div>
						</div>
						<span class="avatar"><img src="{{usuario.avatar}}" alt="" /></span>
						<h1> <strong>{{usuario.nome}}</strong></h1>
						<br>
						<br>
						<span>No que está pensando?</span>
						<form action="/publicar" method="POST" accept-charset="utf-8">
						<input type="hidden" name="autor" value="{{usuario.email}}">
						<textarea name="texto" id="publish" maxlength="140"></textarea>
						<div style="text-align: left;">
							<br>
							<input type="submit" name="publicar" value="Publicar" id="publicar" onclick="return validarPost()">
						</div>
						</form>
					</header>

				<!-- Main -->
					<section id="main">
						
						 {{#each publicacoes}}
                           <div class="row" style="margin-top: 15px;">
							<span  class="avatar" style="text-align:left; padding:2px;"><img src="{{autor.avatar}}" alt="" /></span>
							<span style="text-align:right;">{{texto}}</span><br>
							<span style="text-align:right"><strong>{{data}}</strong></span>
						   </div><br>
						   <div style="border-top: solid 1px rgba(255, 255, 255, 0.25);"></div>
                         {{/each}}
						
						

					</section>

				<!-- Footer -->
					<footer id="footer">
						<p>&copy; UTFitter. O twitter da UTFPR: <a href="http://utfpr.edu.br">UTFPR</a></p>
					</footer>

			</div>

		<!-- Scripts -->
			<script src="/style/assets/js/jquery.min.js"></script>
			<script src="/style/assets/js/jquery.poptrox.min.js"></script>
			<script src="/style/assets/js/skel.min.js"></script>
			<script src="/style/assets/js/main.js"></script>
			<script src="/alertify/alertify.js"></script>
			<script src="/alertify/alertify.min.js"></script>
			<script type="text/javascript">
 			$(document).ready(function () {
              
            	$(function () {
					
				});
 			});

			function validarPost(){
				var post = document.getElementById("publish").value;

				if(!post){
					alertify.error("Post não pode ser em branco.");
					return false;
				} 
				return true;
			}
			</script>

	</body>
</html>